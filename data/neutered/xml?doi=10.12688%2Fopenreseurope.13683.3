                                <mml:mo>&#x22c5;</mml:mo>
                                <mml:msub>
                                    <mml:mtext>x</mml:mtext>
                                    <mml:mtext>i</mml:mtext>
                                </mml:msub>
                                <mml:mtext>)</mml:mtext>
