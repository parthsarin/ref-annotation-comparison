                                        <mml:mo stretchy="false">(</mml:mo>
                                        <mml:msub>
                                            <mml:mi>w</mml:mi>
                                            <mml:mrow>
                                                <mml:mi>i</mml:mi>
                                                <mml:mi>j</mml:mi>
                                            </mml:mrow>
                                        </mml:msub>
                                        <mml:mo stretchy="false">(</mml:mo>
                                        <mml:msub>
                                            <mml:mi>X</mml:mi>
                                            <mml:mi>j</mml:mi>
                                        </mml:msub>
                                        <mml:mo>&#x2212;</mml:mo>
